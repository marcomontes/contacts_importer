<%= form_with(model: csv_file, local: true) do |form| %>
  <% if csv_file.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(csv_file.errors.count, "error") %> prohibited this csv_file from being saved:</h2>

      <ul>
      <% csv_file.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label 'CSV File with Contacts', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.file_field :contacts_file, required: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label 'CSV Name Column', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.select 'columns[name]', sheet_columns, { selected: sheet_columns[0] }, { class: 'form-control' }  %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label 'CSV Birthdate Column', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.select 'columns[birthdate]', sheet_columns, { selected: sheet_columns[1] }, { class: 'form-control' }  %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label 'CSV Phone Column', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.select 'columns[phone]', sheet_columns, { selected: sheet_columns[2] }, { class: 'form-control' }  %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label 'CSV Address Column', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.select 'columns[address]', sheet_columns, { selected: sheet_columns[3] }, { class: 'form-control' }  %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label 'CSV Credit Card Column', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.select 'columns[cc]', sheet_columns, { selected: sheet_columns[4] }, { class: 'form-control' }  %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label 'CSV Email Column', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.select 'columns[email]', sheet_columns, { selected: sheet_columns[5] }, { class: 'form-control' }  %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
      <%= form.submit "SAVE", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
